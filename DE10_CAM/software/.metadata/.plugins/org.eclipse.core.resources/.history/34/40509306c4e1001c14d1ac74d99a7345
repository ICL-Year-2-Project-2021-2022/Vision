/* A simple program that recognizes the characters 't' and 'v' */
#include <stdio.h>
#include <string.h>
int main ()
{
	char* msg = "Hello message from the FPGA!\n";
	FILE* fp;
	char prompt = 0;
	fp = fopen ("/dev/uart_0", "r+");
	if (fp) {
		printf("UART detected.");
		while (1) { // Loop until we receive a 'v'.
			printf("FPGA sending\n");
			char* response = "";
			fwrite (msg, strlen (msg), 1, fp);
			prompt = getc(fp);
			printf(prompt);
			while(prompt != '\n') {
				response += prompt;
				prompt = getc(fp);
			}
			response += prompt;
			printf("Received: ");
			printf(response);
			usleep(100000);
		}
		fclose (fp);
	} else {
		printf("UART not detected.");
	}
 	return 0;
}
